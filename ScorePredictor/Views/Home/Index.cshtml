@model FixturesViewModel

@{
    ViewData["Title"] = "Home Page";
}
@section Styles {
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
}
@foreach (FixtureList list in @Model.fixtureLists)
{
    @if (list != null)
    {
        <table class="col-lg-8 col-lg-offset-2 fixtureList">
            <tr>
                <th class="header" colspan="2">@list.leagueName</th>
            </tr>
            @foreach (Fixture fixture in list.fixtures)
            {
                <tr>
                    <td class="time">@fixture.utcDate</td>
                    <td>@fixture.homeTeamName V @fixture.awayTeamName</td>
                    @*<button>Get Prediction</button>*@
                </tr>
            }
        </table>
    }
    <br />
}



