@model MatchViewModel
@section Styles{
    <link href="~/css/match.css" rel="stylesheet" />
}
<div class="container">
    <div class="header col-lg-12">
        <img class="flag" src="@Model.match.ImageUrl" style="border: 1px white solid" />
        <h1>@Model.match.LeagueName</h1>
        <h3>@Model.match.Stadium</h3>
        <h4>@Model.match.UtcDate</h4>
    </div>
    <div class="row">
        <div class="col-lg-6 teamone">
            <h1 class="team">@Model.match.HomeTeamName</h1>
            <h4>League Position: @Model.match.HomeStats.position</h4>
            <h4 class="alt">W/D/L%: @Model.match.HomeStats.WDL</h4>
            <h4>Average Goals Scored Per Game: @Model.match.HomeStats.goalsScoredPerGame</h4>
            <h4 class="alt">Average Goals Conceded Per Game: @Model.match.HomeStats.goalsConcededPerGame</h4>
            <h4>@Model.match.HomeStats.overallLastSix</h4>
            @foreach (int i in @Model.match.HomeStats.overallLastSix)
            {
                <h5>@i</h5>
            }
        </div>
        <div class="col-lg-6 teamtwo">
            <h1 class="team">@Model.match.AwayTeamName</h1>
            <h4>League Position: @Model.match.AwayStats.position</h4>
            <h4 class="alt">W/D/L%: @Model.match.AwayStats.WDL</h4>
            <h4>Average Goals Scored Per Game: @Model.match.AwayStats.goalsScoredPerGame</h4>
            <h4 class="alt">Average Goals Conceded Per Game: @Model.match.AwayStats.goalsConcededPerGame</h4>
            @foreach(int i in @Model.match.AwayStats.overallLastSix)
            {
                <h5>@i</h5>
            }
        </div>
    </div>
</div>
